{
  "name": "dancerail3toolkit",
  "version": "1.0.0",
  "description": "Some Tools for DanceRail3 Fanmade works",
  "main": "index.js",
  "scripts": {
    "start": "electron-forge start",
    "test": "echo \"Error: no test specified\" && exit 1",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JIMENGAME/DanceRail3Toolkit.git"
  },
  "author": "JIMENGAME",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JIMENGAME/DanceRail3Toolkit/issues"
  },
  "homepage": "https://github.com/JIMENGAME/DanceRail3Toolkit#readme",
  "devDependencies": {
    "electron": "^23.1.2"
  },
  "build": {
    "productName": "Dancerail3 Toolkit",
    "appId": "com.jimengame.dancerail3toolkit",
    "copyright": "Â©JIMENGAME",
    "directories": {
      "output": "out"
    },
    "win": {
      "icon": "./favicon.ico",
      "target": [
        {
          "target": "nsis"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "./favicon.ico",
      "uninstallerIcon": "./favicon.ico",
      "installerHeaderIcon": "./favicon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "DanceRail3 Toolkit"
    },
    "files": [
      "**/*",
      "!LICENSE",
      "!README.md",
      "!**/node_modules/*",
      "!example.png"
    ]
  },
  "dependencies": {
    "@electron/asar": "^3.2.3",
    "electron-squirrel-startup": "^1.0.0"
  }
}
